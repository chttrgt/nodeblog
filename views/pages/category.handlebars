  <h1 class="text-white text-center">ADMINISTRATOR</h1>
</section>

<!--==========================
    ADMIN-PAGE Section
============================-->
<section id="aboutus" class="md-padding">
  <div class="container">
    {{> admin-nav}}
  </div>
</section>

<!--==========================
    THE CATEGORIES
============================-->

<section id="categories" class="md-padding">
  <div class="container">

    <div class="row">
      <div class="col-md-4">
        <form action="" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-12">

              <div class="form-group">
                <input
                  class="form-control"
                  name="name"
                  type="text"
                  placeholder="Category Name *"
                  required="required"
                  data-validation-required-message="Please enter category name."
                />
                <p class="help-block text-danger"></p>
              </div>

            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
              <div id="success"></div>
              <button class="main-btn ml-0" type="submit">Add New Category</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <h3>Categories</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Category Name</th>
              <th scope="col">Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <td>{{name}}</td>
                <td>{{formatDate createdAt "MMM DD YYYY, HH:mm:ss"}}</td>
                <td>
                  <form
                    method="post"
                    action="/admin/categories/{{_id}}?_method=DELETE"
                  >
                    <input type="hidden" name="_method" value="DELETE" />
                    <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>