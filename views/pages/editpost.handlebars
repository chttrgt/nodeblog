<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">EDIT CURRENT POST</h1>
</section>

<!--==========================
    Edit Post Section
============================-->
<section id="post" class="md-padding">
  <div class="container">

    <div class="row text-center">
      <div class="col-md-4 offset-md-4">
        <div class="section-header">
          <h2 class="title">Edit Current Post</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <form
          action="/admin/posts/{{post._id}}?_method=PUT"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="_method" value="PUT" />
          <div class="row">
            <div class="offset-2 col-md-8">

              <div class="form-group">
                <input
                  class="form-control"
                  name="title"
                  type="text"
                  value="{{post.title}}"
                  required="required"
                  data-validation-required-message="Please enter your username."
                />
                <p class="help-block text-danger"></p>
              </div>

              <div class="form-group">
                <select
                  class="form-control custom-select"
                  name="category"
                  required="required"
                  data-validation-required-message="Please select a category."
                >
                  <option value="" disabled selected hidden>
                    {{selectedCategory.name}}
                  </option>
                  {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                  {{/each}}
                </select>
                <p class="help-block text-danger"></p>
              </div>

              <div class="form-group">
                <textarea
                  class="form-control"
                  name="content"
                  required="required"
                  data-validation-required-message="Please enter a message."
                >{{post.content}}</textarea>
                <p class="help-block text-danger"></p>
              </div>

              <div class="form-group">
                <input
                  class="form-control custom-file"
                  name="post_image"
                  type="file"
                  required="required"
                  data-validation-required-message="Choose an image."
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button class="main-btn" type="submit">Update Current Post</button>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
</section>